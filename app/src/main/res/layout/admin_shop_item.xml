<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:id="@+id/admin_product_Image"
                android:src="@drawable/profile_placeholder"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:textSize="20sp"
                    android:id="@+id/admin_product_name"
                    android:text="Black Shirt"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_below="@+id/admin_product_name"
                    android:id="@+id/admin_product_category"
                    android:text="Shirt"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:layout_below="@+id/admin_product_category"
                    android:id="@+id/admin_product_order"
                    android:text="No of Order"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/admin_product_order"
                    android:layout_below="@+id/admin_product_category"
                    android:id="@+id/admin_product_total_order"
                    android:text="4"
                    android:textStyle="bold"
                    />


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="@android:color/darker_gray"/>

</LinearLayout>